{
	"compilerOptions": {
		"module": "CommonJS",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"target": "es2017",
		"sourceMap": true,
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"exclude": ["**/node_modules", "./**/*.spec.ts"]
}
