{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "./src",
    "rootDir": ".",
    "lib": [
      "es2015.proxy",
      "es2017"
    ],
    "outDir": "dist"
  },
  "include": ["src", "medusa-config.js"],
  "exclude": [
    "**/node_modules"
  ]
}
